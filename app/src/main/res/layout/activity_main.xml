<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context="myport.sharkletvecihi.com.myport.MainActivity">


    <TableLayout
        android:id="@+id/table_weather"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:stretchColumns="0"
        android:layout_height="150dp">

        <TableRow>
            <TableLayout
                android:stretchColumns="0">
                <TableRow>
                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="10pt"
                        android:gravity="center_vertical"
                        android:text="İstanbul / Türkiye"/>

                    <ImageView
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow android:layout_marginTop="10dp">
            <TableLayout
                android:stretchColumns="0">
                <TableRow>
                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="7pt"
                        android:gravity="center_vertical"
                        android:text="Güneşli"/>
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow android:layout_marginTop="5dp">
            <TableLayout>
                <TableRow>
                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="10pt"
                        android:gravity="center_vertical"
                        android:text="25°C"/>

                    <TextView
                        android:drawableLeft="@drawable/rain"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="7pt"
                        android:gravity="center_vertical"
                        android:text="40%"/>

                    <TextView
                        android:layout_marginLeft="25dp"
                        android:drawableLeft="@drawable/wind"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="7pt"
                        android:gravity="center_vertical"
                        android:text="40%"/>
                </TableRow>
            </TableLayout>
        </TableRow>

    </TableLayout>

    <TableLayout
        app:layout_constraintTop_toTopOf="@id/table_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_marginTop="150dp"
        android:stretchColumns="*">

        <TableRow>

            <Button android:background="@drawable/shadow"/>
            <Button android:background="@drawable/shadow"/>

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
